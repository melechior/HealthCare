
@{
    Layout = "_Layout";
}
  <div class="container-xxl flex-grow-1 container-p-y">
                        <div class="row">
                            <div class="col-lg-12 mb-12">

                                <div class="card">
                                    <div class="card-header">
                                        <!-- Logo -->
                                        <div class="app-brand mb-4" style="flex-direction: column ;">
                                            <span class="app-brand-logo demo">
                                                <img src="/assets/img/Logo/Logo.png">
                                                </a>
                                        </div>
                                        <!-- /Logo -->
                                        <h4 class="mb-1">تغییر رمز عبور 🔒</h4>
                                    </div>
                                    <div class="card-body">

                                        <!-- Reset Password -->

                                        <form action="auth-login-cover.html" class="mb-3" id="formAuthentication"
                                            method="GET">
                                            <div class="mb-3 form-password-toggle">
                                                <label class="form-label" for="password">رمز عبور</label>
                                                <div class="input-group input-group-merge">
                                                    <input aria-describedby="password" class="form-control"
                                                        id="Oldpassword" name="Oldpassword" placeholder="············"
                                                        type="password" />
                                                    <span class="input-group-text cursor-pointer">
                                                        <i class="ti ti-eye-off"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="mb-3 form-password-toggle">
                                                <label class="form-label" for="password">رمز عبور جدید</label>
                                                <div class="input-group input-group-merge">
                                                    <input aria-describedby="password" class="form-control"
                                                        id="password" name="password" placeholder="············"
                                                        type="password" />
                                                    <span class="input-group-text cursor-pointer">
                                                        <i class="ti ti-eye-off"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="mb-3 form-password-toggle">
                                                <label class="form-label" for="confirm-password">تایید کلمه
                                                    عبور</label>
                                                <div class="input-group input-group-merge">
                                                    <input aria-describedby="password" class="form-control"
                                                        id="confirm-password" name="confirm-password"
                                                        placeholder="············" type="password" />
                                                    <span class="input-group-text cursor-pointer">
                                                        <i class="ti ti-eye-off"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <button class="btn btn-primary d-grid w-100 mb-3">تایید رمز
                                                عبور</button>
                                            
                                        </form>
                                        <!-- /Reset Password -->
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>